# Razorpay Payment Gateway Configuration
# Test Environment (for development)
# Get your test keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_TEST_KEY_ID=your_test_key_id_here
RAZORPAY_TEST_KEY_SECRET=your_test_key_secret_here

# Production Environment (for live payments)
# Get your production keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_PROD_KEY_ID=your_production_key_id_here
RAZORPAY_PROD_KEY_SECRET=your_production_key_secret_here

# Razorpay Mode Configuration
# Set to "true", "1", or "yes" to enable LIVE/PRODUCTION mode (REAL MONEY will be charged!)
# Leave empty or set to "false" to use TEST mode (safe for development)
# Default: TEST mode (if not set)
RAZORPAY_USE_PRODUCTION=false

# Payment URLs (optional - will use defaults if not set)
# If set, these will override FRONTEND_PORT
# Format: http://localhost:PORT/payment/success (for development)
# Format: https://yourdomain.com/payment/success (for production)
RAZORPAY_SUCCESS_URL=
RAZORPAY_FAILURE_URL=

# WhatsApp API Configuration (WASenderApi)
# Get your API key from: https://wasenderapi.com/
WASENDER_API_KEY=your_wasenderapi_key_here
